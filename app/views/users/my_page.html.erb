<% if user_signed_in? %>
	<div class="container">
	    <div class="row">
	        <div class="col-xs-8 col-xs-offset-2">
	        	<h1>マイページ</h1>
	        	<table class="table">
		        	<thead>
					<tr>
						<th>登録名</th>
						<th>メールアドレス</th>
					</tr>
					</thead>
					<tbody>
						<tr>
							<td><%= current_user.name %></td>
							<td>
								<%= current_user.email %>
								<%= link_to "パスワードを変更する", edit_user_password_path(current_user) %>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		</div>
	    <div class="row">
	        <div class="col-xs-7 col-xs-offset-1">
	        	<%= render 'reviews/index', reviews: current_user.reviews, name: current_user.name %>
	        </div>
	    </div>
        <% else %>
			<h1>ユーザー登録、もしくはログインが必要です</h1>
			<%= link_to ' 新規登録', new_user_registration_path %>
			<%= link_to ' ログイン', new_user_session_path %>
		<% end %>
