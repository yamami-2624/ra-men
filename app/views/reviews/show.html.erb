<div class="container">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
			<div class = "fonts">
				レビュー詳細
			</div>
			<div>
				<div class="image_field">
					<%= attachment_image_tag @review, :review_image, format: "jpeg", fallback: "no_image.jpg", class: "review_image_show" %>
				</div>
			</div>
				<table class="review-table" style="table-layout:fixed;width:100%;">
					<tbody>
						<tr>
							<td class="col-xs-2 midasi">商品名</td>
							<td class="col-xs-3"><%= @raamen.name %></td>
						</tr>
						<tr>
							<td class="col-xs-2 midasi">レビュー</td>
								<td class="col-xs-4" style="word-wrap:break-word;">
									<%= @review.review%>
								</td>
							</td>
						</tr>
						<tr>
							<td class="col-xs-2 midasi">トッピング</td>
							<td class="col-xs-3"><%= @review.topping %></td>
						</tr>
						<tr>
							<td class="col-xs-2 midasi">点数</td>
							<td class="col-xs-3"><%= @review.tennsuu %>円</td>
						</tr>
						<tr>
					</tbody>
				</table>
				<div class="flex align-center pl5">
					<% if @review.user_id == current_user.id %>
						<%= link_to "編集する", edit_shop_raamen_review_path(@shop,@raamen,@review), class: "btn" %>
					<% else %>
						<br></br>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
.review-table{
width: 400px;
height: 400px;
}

.review_image_show{
	width: 500px;
	max-width: 500px;
  	height: 300px;
	object-fit:cover;
	object-position: 100% 0% ;
}

td{
	border-bottom: 1px solid black;
}
</style>
