<div class="container">
    <div class="row">
        <div class="col-xs-9 col-xs-offset-2">
            <%= image_tag asset_path("title2.png") %>
        </div>
        <div class="col-xs-3 col-xs-offset-3">
            <div class="quiz_tab">
            <br>
              <%= link_to weekly_ranking_path, class: "rank_btn-non" do %>
                お気に入り
              <% end %>
            </div>
        </div>
        <div class="col-xs-3">
            <div class="quiz_tab">
            <br>
              <%= link_to weekly_tenranking_path, class: "rank_btn" do %>
                <%= image_tag asset_path("king.png"), class: "king" %> 点数
              <% end %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3 col-xs-offset-1">
            <div class="quiz_tab">
            <br>
              <%= link_to weekly_tenranking_path, class: "rank_btn-non" do %>
                週間
              <% end %>
            </div>
        </div>
        <div class="col-xs-3">
            <div class="quiz_tab">
            <br>
              <%= link_to monthly_tenranking_path, class: "rank_btn" do %>
                <%= image_tag asset_path("king.png"), class: "king" %> 月間
              <% end %>
            </div>
        </div>
        <div class="col-xs-3">
            <div class="quiz_tab">
            <br>
              <%= link_to year_tenranking_path, class: "rank_btn-non" do %>
                年間
              <% end %>
            </div>
        </div>
        <div class="col-xs-10 col-xs-offset-1">
            <table class="table">
                <%= render "shops/ranking", shop: @shop_tennsuus %>
            </table>
            <br>
            <br>
            <br>
            <div class="rank-content2">
                <table class="table">
                <%= image_tag asset_path("title3.png") %>
                        <thead>
                            <tr>
                                <th>店名</th>
                                <th>住所</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @shop_new.each do |shop| %>
                                <tr>
                                    <td><%= link_to shop.name, shop_path(shop), class: "detail-btn" %></td>
                                    <td><%= shop.address %></td>
                                </tr>
                            <% end %>
                        </tbody>
                        <%= paginate @shop_new %>
                </table>
            </div>
        </div>
    </div>
</div>


<style>
</style>

<script>
document.getElementById("quiz_tab").onclick = function() {
  this.classList.toggle("blue");
};
</script>