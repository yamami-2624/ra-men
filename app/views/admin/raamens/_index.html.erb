<% if raamens == nil %>
	<h2>ラーメンの登録はまだありません</h2>
<% else %>
	<div class="fonts">
		商品一覧
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>商品名</th>
				<th>商品説明</th>
				<th>価格</th>
				<th>味</th>
				<th>販売ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% raamens.each do |raamen| %>
				<tr>
					<td><%= link_to raamen.name, admin_shop_raamen_path(shop,raamen), class: "detail-btn" %></td>
					<td><%= raamen.text %></td>
					<td><%= raamen.price %>円</td>
					<td><%= raamen.aji %></td>
					<td>
						<% if raamen.is_active? %>
							<span class="text-active">販売中</span>
						<% else %>
							<span class="text-invalid">販売停止中</span>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
		<%= paginate raamens %>
	</table>
<% end %>
