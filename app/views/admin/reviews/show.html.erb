<div class="container">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
			<h2 class="section-ttl">レビュー詳細</h2>
			<div class="flex">
				<div>
					<div class="image_field">
						<%= attachment_image_tag @review, :review_image, format: "jpeg", fallback: "no_image.jpg", class: "review_image" %>
					</div>
				</div>
				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>商品名</td>
							<td><%= @raamen.name %></td>
						</tr>
						<tr>
							<td>レビュー</td>
							<td><%= @review.review %></td>
						</tr>
						<tr>
							<td>トッピング</td>
							<td><%= @review.topping %></td>
						</tr>
						<tr>
							<td>点数</td>
							<td><%= @review.tennsuu %>円</td>
						</tr>
						<tr>
					</tbody>
				</table>
				<div class="flex align-center pl5">
					<%= button_to "削除する", admin_shop_raamen_review_path(@raamen,@shop,@review), method: :delete, class: "btn" %>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
.attachment{
	max-width: 500px;
  	height: 300px;
	object-fit:cover;
	object-position: 100% 0% ;
}
</style>

