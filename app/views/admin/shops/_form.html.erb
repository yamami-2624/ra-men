<%= form_for(shop, url: url) do |f| %>
	<div class="flex">
		<div>
			<%= attachment_image_tag shop, :shop_image, format: "jpeg", fallback: "no_image.jpg",width: "100px", heigh: "90px",class: "imag_field img-thumbnail img-responsive img_prev"  %>
			<span class="btn img_field" onclick="$('.img_field').click()"=><%= f.attachment_field :shop_image %>画像選択</span>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= f.label :name, "店名" %></td>
					<td><%= f.text_field :name %></td>
				</tr>
				<tr>
					<td><%= f.label :text, "店紹介" %></td>
					<td><%= f.text_area :text %></td>
				</tr>
				<tr>
					<td><%= f.label :address, "住所" %></td>
					<td><%= f.text_area :address %></td>
				</tr>
				<tr>
					<td><%= f.label :phone_number, "電話番号" %></td>
					<td><%= f.text_area :phone_number %></td>
				</tr>
				<tr>
					<td><%= f.label :business_hours, "営業時間" %></td>
					<td><%= f.text_area :business_hours, rows: 3 %></td>
				</tr>
				<tr>
					<td><%= f.label :number_of_seats, "席数" %></td>
					<td><%= f.text_area :number_of_seats, rows: 3 %>席</td>
				</tr>
				<tr>
					<td><%= f.label :access, "アクセス" %></td>
					<td><%= f.text_area :access, rows: 3 %></td>
				</tr>
			</tbody>
		</table>
		<div class="flex align-center pl5">
			<%= f.submit submit, class: "btn" %>
		</div>
	</div>
<% end %>

